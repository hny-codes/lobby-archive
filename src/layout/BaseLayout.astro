---
import '../globals.css';
import Navbar from '../components/Navbar.astro';
import BgVideoMp4 from '../assets/bg/arona4k.mp4';
import BgVideoWebm from '../assets/bg/arona4k.webm';
import { ViewTransitions } from 'astro:transitions';

const { title } = Astro.props;
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <!-- style={`background-image:url(${optimizedBg.src})`} -->
  <body class='relative bg-center bg-no-repeat'>
    <div transition:persist class='fixed overflow-hidden h-screen w-full -z-50'>
      <video
        playsinline
        autoplay
        muted
        loop
        disablepictureinpicture
        class='absolute top-0 left-0 h-full w-full object-cover object-[20%] xl:object-center'
      >
        <!-- <source src={BgVideoWebm} type='video/webm' /> -->
        <source src={BgVideoMp4} type='video/mp4' />
      </video>
    </div>
    <Navbar />
    <slot />
  </body>
</html>
